# Cloud Editor Backend
# API port defaults to 4000
PORT=4000

# Where segment JSON files are stored relative to the backend workspace
SEGMENTS_PATH=../../data/segments

# Cloud Editor Frontend
# Base URL the React app uses to reach the API
VITE_API_URL=http://localhost:4000

# YouTube Live Configuration (Broadcast Node)
# Get your stream key from YouTube Studio > Go Live > Stream
YOUTUBE_STREAM_KEY=your_youtube_stream_key_here
YOUTUBE_RTMP_URL=rtmp://a.rtmp.youtube.com/live2

# Test RTMP Input (for testing)
# You can use OBS to stream to this URL, or use a test RTMP server
TEST_RTMP_INPUT=rtmp://localhost:1935/live/test
