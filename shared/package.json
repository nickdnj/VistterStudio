{
  "name": "@vistterstudio/shared",
  "version": "1.0.0",
  "description": "Shared types, schemas, and utilities for VistterStudio",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./utils/segments": {
      "require": "./dist/utils/segments.js",
      "import": "./dist/utils/segments.js",
      "types": "./dist/utils/segments.d.ts"
    }
  },
  "files": [
    "dist",
    "schemas"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0"
  }
}
